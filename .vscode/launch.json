{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: main_work_example_preact_with_async_support.py",
            "type": "debugpy",
            "request": "launch",
            "program": "async_support/main_work_example_preact_with_async_support.py"
        },
        {
            "name": "Python Debug: React Backend",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/react_with_build_tools/main_react.py",
            "console": "integratedTerminal",
            "args": [
                "--debug-frontend"
            ],
            "cwd": "${workspaceFolder}/react_with_build_tools",
            "env": {
                "WEBVIEW2_ADDITIONAL_BROWSER_ARGUMENTS": " --remote-debugging-port=9222 "
            }
        },
        {
            "name": "Frontend Attach: Webview (React)",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/react_with_build_tools",
            "sourceMaps": true
        }
    ],
    "compounds": [
        {
            "name": "Compound Debug: Python + React Frontend",
            "configurations": [
                "Python Debug: React Backend",
                "Frontend Attach: Webview (React)"
            ],
            "stopAll": true
        }
    ]
}